setlocal tabstop=8 softtabstop=2 shiftwidth=2 expandtab smartindent nocindent

if &filetype == "css"
  setlocal softtabstop=8 shiftwidth=8 noexpandtab
elseif &filetype == "ruby" || &filetype == "python"
  setlocal softtabstop=4 shiftwidth=4
endif
